<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="CustomAppTheme" parent="@android:style/Theme.Black.NoTitleBar">
        <item name="android:progressBarStyle">@android:style/Widget.Holo.ProgressBar</item>
    </style>

    <style name="picChooserTheme" parent="@android:style/Theme.Dialog">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="CustomAlertDialogStyle">
        <item name="android:bottomBright">#727272</item>
        <item name="android:bottomDark">#727272</item>
        <item name="android:bottomMedium">#727272</item>
        <item name="android:centerBright">#727272</item>
        <item name="android:centerDark">#727272</item>
        <item name="android:centerMedium">#727272</item>
        <item name="android:fullBright">#727272</item>
        <item name="android:fullDark">#727272</item>
        <item name="android:topBright">#727272</item>
        <item name="android:topDark">#727272</item>
    </style>

    <style name="alertDialogTheme" parent="@android:style/Theme.Holo.Dialog.NoActionBar">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:width">@dimen/progress_dialog_width</item>
        <item name="android:gravity">center|left</item>
    </style>

</resources>