<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent" >

    <RelativeLayout
        android:layout_width="@dimen/custom_dialog_width"
        android:layout_height="@dimen/custom_dialog_height"
        android:layout_centerInParent="true"
        android:background="#fff" >

        <com.utility.view.CustomTextView
            android:id="@+id/et_message"
            style="@style/custom_dialog_et_message_style"
            android:layout_width="@dimen/custom_dialog_et_message_width"
            android:layout_height="@dimen/custom_dialog_et_message_height"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/custom_dialog_et_message_marginTop"
            android:gravity="top|left"
            android:padding="@dimen/custom_dialog_et_message_padding"
            android:text="Warning Message Here"
            custom:fontFace="GOTHIC_0" />

        <com.utility.view.CustomButton
            android:id="@+id/btn_accept"
            style="@style/custom_dialog_btn_accept_style"
            android:layout_width="@dimen/custom_dialog_btn_accept_width"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_message"
            android:layout_marginLeft="@dimen/custom_dialog_btn_accept_marginLeft"
            android:layout_marginTop="@dimen/custom_dialog_btn_accept_marginTop"
            android:background="@drawable/terms_accept_btn_selector"
            android:text="OK"
            android:visibility="gone"
            custom:fontFace="GOTHIC_0" />

        <com.utility.view.CustomButton
            android:id="@+id/btn_ok"
            style="@style/custom_dialog_btn_accept_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_message"
            android:layout_marginLeft="@dimen/custom_dialog_btn_ok_marginLeft"
            android:layout_marginRight="@dimen/custom_dialog_btn_ok_marginRight"
            android:layout_marginTop="@dimen/custom_dialog_btn_ok_marginTop"
            android:background="@drawable/terms_accept_btn_selector"
            android:text="OK"
            android:visibility="gone"
            custom:fontFace="GOTHIC_0" />

        <com.utility.view.CustomButton
            android:id="@+id/btn_cancel"
            style="@style/custom_dialog_btn_accept_style"
            android:layout_width="@dimen/custom_dialog_btn_cancel_width"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_message"
            android:layout_marginRight="@dimen/custom_dialog_btn_cancel_marginRight"
            android:layout_marginTop="@dimen/custom_dialog_btn_cancel_marginTop"
            android:layout_toRightOf="@+id/btn_accept"
            android:background="@drawable/terms_cancel_btn_selector"
            android:text="Cancel"
            android:visibility="gone"
            custom:fontFace="GOTHIC_0" />
    </RelativeLayout>

</RelativeLayout>