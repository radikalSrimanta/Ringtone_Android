<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/country_list_row_paddingTop"
    android:paddingLeft="@dimen/country_list_row_paddingLeft"
    android:paddingRight="@dimen/country_list_row_paddingLeft"
    android:paddingTop="@dimen/country_list_row_paddingTop" >

    <com.utility.view.CustomTextView
        android:id="@+id/tv_country_name"
        style="@style/country_list_row_tv_country_style"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:clickable="false"
        android:focusable="false"
        android:text="India"
        custom:fontFace="GOTHIC_0" />

    <RadioButton
        android:id="@+id/tv_country_name"
        style="@style/country_list_row_tv_country_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@null"
        android:clickable="true"
        android:drawablePadding="30dp"
        android:drawableRight="@android:drawable/btn_radio"
        android:focusable="false"
        android:visibility="gone"
        android:text="India" />

</LinearLayout>